            <a class="navbar-brand" href="/">Spotie</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            {{#if user}}
                {{> logged }}
            {{else}}
                {{> guest }}
            {{/if}}

        </div>
    </div>
</nav>
<!-- /Fixed Navbar -->

<div class="container">

    {{> flashMessage }}

    {{{body}}}
