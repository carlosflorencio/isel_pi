<div class="row">
    <div class="col-md-12">
        <div class="well">
            <h3>Edit {{playlist.name}}</h3>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form action="/playlists/{{playlist.id}}/edit" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" name="name" id="name" class="form-control" value="{{playlist.name}}"  placeholder="Name" required>
            </div>
            <button type="submit" class="btn btn-primary">Update Playlist</button>
        </form>
    </div>
</div>