<div class="row">
    <div class="col-md-12">
        <div class="well">
            <h3>Edit Permissions of <strong>{{playlist.name}}</strong> shared with {{ invite.toEmail }}</h3>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-lock"></i> Permissions
            </div>
            <div class="panel-body">
                <form action="/playlists/{{playlist.id}}/share/{{ invite.id }}/edit" method="post">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="write" {{#if invite.writable}}checked{{/if}}>
                            <strong>Write Permission:</strong> The user can add tracks to the playlist
                        </label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-info">Update Permissions</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>