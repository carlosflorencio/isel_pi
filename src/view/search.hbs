{{> header }}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">{{ total }} Results for: {{ query }}</div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Followers</th>
                            <th>Spotify</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                            <tr>
                                <td><img width="100" src="{{ this.image }}" alt=""/></td>
                                <td>{{ limit this.name 30 }}</td>
                                <td>{{ this.followers }}</td>
                                <td><a href="{{ this.uri }}" class="btn btn-primary">Open in Spotify</a></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

{{> footer }}